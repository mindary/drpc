{
  "name": "@drpc/example-greeting",
  "description": "A simple greeting application using drpc",
  "version": "0.2.1",
  "private": true,
  "keywords": [],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=14"
  },
  "author": "Yuan Tao",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "acceptance": "lb-mocha \"dist/__tests__/acceptance/**/*.js\"",
    "build": "lb-tsc",
    "clean": "lb-clean drpc-example-greeting*.tgz dist *.tsbuildinfo package",
    "pretest": "npm run clean && npm run build",
    "test": "lb-mocha --allow-console-logs  \"dist/__tests__/**/*.js\"",
    "unit": "lb-mocha --allow-console-logs  \"dist/__tests__/unit/**/*.js\"",
    "verify": "npm pack && tar xf drpc-example-greeting*.tgz && tree package && npm run clean",
    "start": "node .",
    "prestart": "npm run build"
  },
  "dependencies": {
    "@drpc/client": "^0.9.1",
    "@drpc/client-tcp": "^0.2.1",
    "@drpc/core": "^0.15.1",
    "@drpc/registry": "^0.2.1",
    "@drpc/server": "^0.14.1",
    "@drpc/transport-tcp": "^0.2.1"
  },
  "devDependencies": {
    "@loopback/build": "^7.0.0",
    "@loopback/eslint-config": "^11.0.0",
    "@loopback/testlab": "^3.4.2",
    "@types/node": "^16.7.13"
  },
  "files": [
    "README.md",
    "dist",
    "src",
    "!*/__tests__"
  ]
}
