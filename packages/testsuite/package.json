{
  "name": "@drpc/testsuite",
  "description": "The test suite for drpc transports",
  "version": "0.9.0",
  "keywords": [],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=14"
  },
  "author": "Yuan Tao",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "acceptance": "lb-mocha \"dist/__tests__/acceptance/**/*.js\"",
    "build": "lb-tsc",
    "clean": "lb-clean drpc-testsuite*.tgz dist *.tsbuildinfo package",
    "pretest": "npm run clean && npm run build",
    "test": "lb-mocha --allow-console-logs  \"dist/__tests__/**/*.js\"",
    "unit": "lb-mocha --allow-console-logs  \"dist/__tests__/unit/**/*.js\"",
    "verify": "npm pack && tar xf drpc-testsuite*.tgz && tree package && npm run clean"
  },
  "dependencies": {
    "@drpc/client": "^0.8.0",
    "@drpc/core": "^0.14.0",
    "@drpc/server": "^0.13.0",
    "@drpc/testlab": "^0.10.8",
    "@drpc/types": "^0.4.1",
    "delay": "^5.0.0",
    "ts-essentials": "^8.1.0"
  },
  "devDependencies": {
    "@loopback/build": "^7.0.0",
    "@loopback/eslint-config": "^11.0.0",
    "@loopback/testlab": "^3.4.2",
    "@types/node": "^16.7.11",
    "a-defer": "^0.1.1"
  },
  "files": [
    "README.md",
    "dist",
    "src",
    "!*/__tests__"
  ]
}
