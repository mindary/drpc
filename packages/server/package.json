  "dependencies": {
    "@remly/core": "^0.3.1",
    "emittery": "^0.7.2",
    "make-error-cause": "^2.3.0",
    "tslib": "^2.0.3"
  },
  "devDependencies": {
    "@loopback/build": "^6.2.5",
    "@loopback/eslint-config": "^10.0.1",
    "@loopback/testlab": "^3.2.7",
    "@types/node": "^14.14.6"
  },
  "files": [
    "README.md",
    "dist",
    "src",
    "!*/__tests__"
