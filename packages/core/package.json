{
  "name": "@remly/core",
  "description": "A binary-only RPC protocol for multiple transports such as WebSocket, WebWorker, HTTP, BLE and so on.",
  "version": "0.4.0",
  "keywords": [],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=10.16"
  },
  "author": "Yuan Tao",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tikrbits/remly"
  },
  "scripts": {
    "acceptance": "lb-mocha \"dist/__tests__/acceptance/**/*.js\"",
    "build": "lb-tsc",
    "clean": "lb-clean remly-core*.tgz dist *.tsbuildinfo package",
    "pretest": "npm run build",
    "test": "lb-mocha \"dist/__tests__/**/*.js\"",
    "unit": "lb-mocha \"dist/__tests__/unit/**/*.js\"",
    "verify": "npm pack && tar xf remly-core*.tgz && tree package && npm run clean"
  },
  "dependencies": {
    "@loopback/metadata": "^3.3.1",
    "@loopx/bufio": "^1.2.2",
    "@remly/schedule": "^0.4.0",
    "@remly/serializer": "^0.4.0",
    "debug": "^4.3.2",
    "emittery": "^0.9.2",
    "micromatch": "^4.0.4",
    "shortid": "^2.2.16",
    "ts-essentials": "^7.0.2",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@loopback/build": "^6.4.1",
    "@loopback/eslint-config": "^10.2.1",
    "@loopback/testlab": "^3.4.1",
    "@loopx/defer": "^1.0.0",
    "@types/micromatch": "^4.0.1",
    "@types/node": "^16.0.0",
    "@types/shortid": "^0.0.29",
    "delay": "^5.0.0",
    "get-port": "^5.1.1"
  },
  "files": [
    "README.md",
    "dist",
    "src",
    "!*/__tests__"
  ]
}
