    "ws": "^7.3.1"
  },
  "devDependencies": {
    "@remly/transport-tests": "^0.3.1",
    "@loopback/build": "^6.2.5",
    "@loopback/eslint-config": "^10.0.1",
    "@loopback/testlab": "^3.2.7",
    "@types/node": "^14.14.6",
    "@types/url-parse": "^1.4.3",
    "@types/ws": "^7.2.9",
    "get-port": "^5.1.1"
  },
  "files": [
    "README.md",
    "dist",
    "src",
    "!*/__tests__"
