    "ws": "^7.5.3"
  },
  "devDependencies": {
    "@loopback/build": "^7.0.0",
    "@loopback/eslint-config": "^11.0.0",
    "@loopback/testlab": "^3.4.2",
    "@remly/transport-tests": "^0.4.5",
    "@types/node": "^16.4.2",
    "@types/url-parse": "^1.4.3",
    "@types/ws": "^7.4.7",
    "get-port": "^5.1.1"
  },
  "files": [
    "README.md",
    "dist",
    "src",
    "!*/__tests__"
