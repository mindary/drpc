{
  "name": "@remly/tcp",
  "description": "The remly TCP transport",
  "version": "0.3.1",
  "keywords": [],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "browser": "dist/browser.js",
  "engines": {
    "node": ">=10.16"
  },
  "author": "Yuan Tao",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tikrbits/remly"
  },
  "scripts": {
    "acceptance": "lb-mocha \"dist/__tests__/acceptance/**/*.js\"",
    "build": "lb-tsc",
    "clean": "lb-clean remly-tcp*.tgz dist *.tsbuildinfo package",
    "pretest": "npm run build",
    "test": "lb-mocha \"dist/__tests__/**/*.js\"",
    "unit": "lb-mocha \"dist/__tests__/unit/**/*.js\"",
    "verify": "npm pack && tar xf remly-tcp*.tgz && tree package && npm run clean"
  },
  "dependencies": {
    "@remly/core": "^0.3.1",
    "@remly/server": "^0.3.1",
    "emittery": "^0.8.1",
    "ts-essentials": "^7.0.1",
    "tslib": "^2.1.0"
  },
  "devDependencies": {
    "@remly/transport-tests": "^0.3.1",
    "@loopback/build": "^6.2.9",
    "@loopback/eslint-config": "^10.0.5",
    "@loopback/testlab": "^3.2.12",
    "@types/node": "^14.14.33"
  },
  "files": [
    "README.md",
    "dist",
    "src",
    "!*/__tests__"
  ]
}
