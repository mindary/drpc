{
  "name": "@remly/tcp",
  "description": "The remly TCP server library",
  "version": "0.5.7",
  "keywords": [],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=14"
  },
  "author": "Yuan Tao",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "acceptance": "lb-mocha \"dist/__tests__/acceptance/**/*.js\"",
    "build": "lb-tsc",
    "clean": "lb-clean remly-tcp*.tgz dist *.tsbuildinfo package",
    "pretest": "npm run clean && npm run build",
    "test": "lb-mocha --allow-console-logs  \"dist/__tests__/**/*.js\"",
    "unit": "lb-mocha --allow-console-logs  \"dist/__tests__/unit/**/*.js\"",
    "verify": "npm pack && tar xf remly-tcp*.tgz && tree package && npm run clean"
  },
  "dependencies": {
    "@libit/emittery": "^0.10.1",
    "@remly/core": "^0.6.5",
    "@remly/server": "^0.6.9",
    "@remly/tcp-client": "^0.3.5",
    "ts-essentials": "^7.0.3"
  },
  "devDependencies": {
    "@loopback/build": "^7.0.0",
    "@loopback/eslint-config": "^11.0.0",
    "@loopback/testlab": "^3.4.2",
    "@remly/testlab": "^0.6.5",
    "@remly/testsuite": "^0.3.9",
    "@remly/threads-worker": "^0.3.5",
    "@types/node": "^16.4.13"
  },
  "files": [
    "README.md",
    "dist",
    "src",
    "!*/__tests__"
  ]
}
